# ================================================
# PRODUCTION ENVIRONMENT VARIABLES - CONTRACTORS MALL
# ================================================
# Copy this file to .env.production and fill in the values
# Deploy these variables to Vercel/your hosting platform

# ================================================
# SUPABASE CONFIGURATION (Required)
# ================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# ================================================
# APPLICATION URLS (Required)
# ================================================
# These should match your Vercel deployment URLs
# Admin app URL (for suppliers/admins)
NEXT_PUBLIC_ADMIN_URL=https://contractors-mall-admin.vercel.app
# Web app URL (for contractors)
NEXT_PUBLIC_WEB_URL=https://contractors-mall-web.vercel.app
# Main app URL (used for redirects and emails)
NEXT_PUBLIC_APP_URL=https://contractors-mall-admin.vercel.app

# ================================================
# MAPBOX CONFIGURATION (Required for map features)
# ================================================
NEXT_PUBLIC_MAPBOX_PUBLIC_TOKEN=YOUR_MAPBOX_PUBLIC_TOKEN

# ================================================
# EMAIL CONFIGURATION (Optional - for email features)
# ================================================
# Resend.com API key for transactional emails
RESEND_API_KEY=YOUR_RESEND_API_KEY
# Email sender configuration
EMAIL_FROM=noreply@contractorsmall.jo
EMAIL_FROM_NAME=Contractors Mall

# ================================================
# PAYMENT GATEWAY (Future - Phase 3)
# ================================================
# PAYMENT_PROVIDER=stripe
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=
# STRIPE_WEBHOOK_SECRET=

# ================================================
# MONITORING & ANALYTICS (Optional but recommended)
# ================================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Vercel Analytics (auto-configured on Vercel)
# NEXT_PUBLIC_ANALYTICS_ID=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ================================================
# SECURITY & RATE LIMITING
# ================================================
# JWT secret for additional token signing (optional)
JWT_SECRET=YOUR_RANDOM_SECRET_KEY

# Rate limiting configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600

# ================================================
# FEATURE FLAGS (for gradual rollout)
# ================================================
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# ================================================
# REGIONAL SETTINGS
# ================================================
# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=ar
# Supported locales
NEXT_PUBLIC_SUPPORTED_LOCALES=ar,en
# Default currency
NEXT_PUBLIC_CURRENCY=JOD
# Default timezone
NEXT_PUBLIC_TIMEZONE=Asia/Amman

# ================================================
# CDN & STORAGE (if using external CDN)
# ================================================
# NEXT_PUBLIC_CDN_URL=https://cdn.contractorsmall.jo
# NEXT_PUBLIC_STORAGE_URL=https://storage.contractorsmall.jo

# ================================================
# DEPLOYMENT METADATA
# ================================================
# These are usually auto-set by Vercel
# VERCEL_URL=
# VERCEL_ENV=production
# VERCEL_GIT_COMMIT_SHA=
# VERCEL_GIT_COMMIT_MESSAGE=