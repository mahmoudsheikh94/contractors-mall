{
  "name": "contractors-mall",
  "version": "1.0.0",
  "private": true,
  "description": "مول المقاول - Construction materials marketplace for Jordan",
  "author": "Mahmoud Sheikh Alard",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:admin": "turbo build --filter=@contractors-mall/admin",
    "build:web": "turbo build --filter=@contractors-mall/web",
    "build:production": "NODE_ENV=production turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "turbo test && playwright test",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:all": "pnpm clean && rm -rf .turbo && find . -name '.next' -type d -prune -exec rm -rf '{}' +",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration new",
    "db:push": "supabase db push",
    "db:seed": "supabase db seed",
    "db:export": "pg_dump --no-owner --no-acl -f contractors_mall_backup.sql",
    "db:generate-test-data": "node scripts/generate-test-data.mjs",
    "db:seed-comprehensive": "./scripts/run-comprehensive-test-data.sh",
    "db:verify-setup": "node scripts/verify-supabase-setup.mjs",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install || true",
    "check:all": "pnpm lint && pnpm type-check && pnpm test"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@supabase/supabase-js": "^2.39.0",
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "playwright": "^1.56.1",
    "tsx": "^4.20.6",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}