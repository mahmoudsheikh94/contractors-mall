# Supabase - Public (required for both apps)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase - Service Role (server-side only, admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase - CI/CD & Type Generation
SUPABASE_PROJECT_ID=your-project-id-here
SUPABASE_ACCESS_TOKEN=your-access-token-here

# Map Services
MAPBOX_TOKEN=your-mapbox-token-here

# Payment Provider (HyperPay)
HYPERPAY_ENTITY_ID=your-entity-id-here
HYPERPAY_ACCESS_TOKEN=your-access-token-here
HYPERPAY_TEST_MODE=true

# SMS Provider (for OTP)
OTP_SENDER_ID=ContractorsMall

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Deployment Monitoring (for scripts/check-deployment.sh)
WEB_URL=https://contractors-mall.vercel.app
ADMIN_URL=https://contractors-mall-admin.vercel.app

# Webhook Security (optional, for Vercel webhook signature verification)
VERCEL_WEBHOOK_SECRET=your-webhook-secret-here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Seed Endpoint Security (CRITICAL - Set these in production!)
# ALLOW_SEED=false  # Set to 'true' only in development or if you really need seed endpoints
# SEED_SECRET=your-secure-seed-secret-here  # Required if seed endpoints are enabled
# NODE_ENV=production  # Automatically set by hosting providers